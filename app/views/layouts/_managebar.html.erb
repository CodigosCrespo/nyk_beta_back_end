<div class="sidebar">
  <div class="sidebar-top">
  </div>

  <div class="campaigns">

    <% @campaigns.each do |campaign| %>

      <div class="campaign-link">
        <a href="/campaigns/<%=campaign.id%>"><%=campaign.name%></a>
        <!-- <p class="campaign-count">Contacts: <%=campaign.jobs.count%></p> -->
        <hr>
      </div>
    <% end %>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createCampaignModal">
      New Campaign
    </button>

  </div>

</div>
