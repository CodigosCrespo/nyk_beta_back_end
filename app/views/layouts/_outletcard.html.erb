<div class="outlet-card card" data-id="<%=outlet.id%>">
  <div class="outlet-card-top">
    <div class="left-gutter">
      <div class="card-checkbox">
        <input type="checkbox" class="campaign-select-all-toggle"/>
      </div>
    </div>
    <% if current_user.admin %>
    <p class="name"><a href="/outlets/<%=outlet.id%>/edit"><%=outlet.name%></a></p>
    <% else %>
    <p class="name"><%=outlet.name%></p>
    <% end %>
    <p class="description"><%=outlet.description%></p>
  </div>
  <div class="outlet-card-bottom hidden">
    <div class="left-gutter">

    </div>
    <div class="contact-info">
      <div class="row1">
        <div class="heading-col">
          <p class="card-heading">website</p>
        </div>
        <% if outlet.website %>
          <p><a target="_blank" href="http://<%=outlet.website%>"><%=outlet.website%></a></p>
        <% end %>
      </div>
      <div class="row2">
        <div class="heading-col">
          <p class="card-heading">email</p>
        </div>
        <% if outlet.email %>
        <p><a href="mailto:<%=outlet.email%>"><%=outlet.email.downcase%></a></p>
        <% end %>
      </div>
      <div class="row3">
        <div class="heading-col">
          <p class="card-heading">location</p>
        </div>
        <% location_arr = outlet.city, outlet.state, outlet.country.name %>
        <% location_arr.delete(nil) %>
        <% if location_arr.count === 3 %>
          <p><%=outlet.city%>, <%=outlet.state%>, <%=outlet.country.name%></p>
        <% elsif location_arr.count === 2 %>
          <p><%=outlet.city%><%=outlet.state%>, <%=outlet.country.name%></p>
        <% elsif location_arr.count === 1 %>
          <p><%=outlet.country.name%></p>
        <% end %>
      </div>
      <div class="row4">
        <div class="heading-col">
          <p class="card-heading">hypeM</p>
        </div>
        <div class="heading-col">
        <% if outlet.hype_m == true %>
          <p>Yes</p>
        <% else %>
          <p>No</p>
        <% end %>
        </div>
        <div class="heading-col">
          <p class="card-heading">SubmitHub</p>
        </div>
        <div class="heading-col" style="text-align: center;">
          <% if outlet.submithub == true %>
            <p>Yes</p>
          <% else %>
            <p>No</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="social-info">
      <%if outlet.twitter.present? %>
        <div class="twitter-link social-wrapper">
          <div class="social-icon">
            <?xml version="1.0" encoding="UTF-8" standalone="no"?>
            <svg width="18px" viewBox="0 0 38 33" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
