                </g>
            </svg>
          </div>
          <p class="social-link"><a target="_blank" href="http://instagram.com/<%=outlet.twitter%>"><%=outlet.instagram_followers%><%="instagram" if !outlet.instagram_followers.present?%></a></p>
        </div>
      <% end %>
      <%if outlet.facebook.present? %>
        <div class="facebook-link social-wrapper">
          <div class="social-icon">
            <?xml version="1.0" encoding="UTF-8" standalone="no"?>
            <svg width="16px" viewBox="0 0 37 37" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <path d="M36.8,34.6 C36.8,35.7 35.9,36.6 34.8,36.6 L25.4,36.6 L25.4,22.4 L30.2,22.4 L30.9,16.9 L25.4,16.9 L25.4,13.4 C25.4,11.8 25.8,10.7 28.1,10.7 L31,10.7 L31,5.7 C30.5,5.6 28.8,5.5 26.7,5.5 C22.5,5.5 19.6,8.1 19.6,12.8 L19.6,16.9 L14.8,16.9 L14.8,22.4 L19.6,22.4 L19.6,36.6 L2,36.6 C0.9,36.6 0,35.7 0,34.6 L0,2 C0,0.9 0.9,0 2,0 L34.7,0 C35.8,0 36.7,0.9 36.7,2 L36.7,34.6 L36.8,34.6 Z" id="Facebook" fill="#555D64"></path>
                </g>
            </svg>
          </div>
          <p class="social-link"><a target="_blank" href="http://facebook.com/<%=outlet.facebook%>"><%=outlet.facebook_likes%><%="facebook" if !outlet.facebook_likes.present?%></a></p>
        </div>
      <% end %>
      <%if outlet.linkedin.present? %>
        <div class="linkedin-link social-wrapper">
          <div class="social-icon">
            <?xml version="1.0" encoding="UTF-8" standalone="no"?>
            <svg width="16px" viewBox="0 0 38 34" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <g id="LinkedIn" fill="#555D64">
                        <rect id="Rectangle-path" x="1.3" y="10.8" width="7.2" height="22.8"></rect>
                        <path d="M28.1,10.6 C24,10.6 21.4,12.8 20.9,14.4 L20.9,10.8 L12.8,10.8 C12.9,12.7 12.8,33.6 12.8,33.6 L20.9,33.6 L20.9,21.3 C20.9,20.6 20.9,19.9 21.1,19.4 C21.7,18 22.8,16.6 25,16.6 C27.8,16.6 29.1,18.7 29.1,21.8 L29.1,33.6 L37.3,33.6 L37.3,20.9 C37.2,13.9 33.2,10.6 28.1,10.6 L28.1,10.6 Z" id="Shape"></path>
                        <path d="M4.7,0.1 C2,0.1 0.3,1.8 0.3,4.1 C0.3,6.3 2,8 4.6,8 L4.7,8 C7.4,8 9.1,6.3 9.1,4 C9,1.8 7.4,0.1 4.7,0.1 L4.7,0.1 Z" id="Shape"></path>
                    </g>
                </g>
            </svg>
          </div>
          <p class="social-link"><a target="_blank" href="http://linkedin.com/company/<%=outlet.linkedin%>">linkedin</a></p>
        </div>
      <% end %>

    </div>
    <div class="genres">
      <% genres = [] %>
      <% outlet.jobs.each do |job| %>
        <% job.writer.genres.each do |genre| %>
          <% if genres.include?(genre.name) == false%>
            <% genres.push(genre.name) %>
          <% end %>
        <% end %>
      <% end %>
      <% if genres.count > 8 %>
        <p class="tag">All Genres</p>
      <% elsif genres.count < 9 %>
        <% genres.each do |genre| %>
          <p class="tag"><%=genre%></p>
        <% end %>
      <% end %>

    </div>
    <div class="presstypes">
      <% presstypes = [] %>
      <% outlet.jobs.each do |job| %>
        <% job.presstypes.each do |presstype| %>
          <% if presstypes.include?(presstype.name) == false%>
            <% presstypes.push(presstype.name) %>
          <% end %>
        <% end %>
      <% end %>
      <% if presstypes.count > 8 %>
        <p class="tag">All Press Types</p>
      <% elsif presstypes.count < 9 %>
        <% presstypes.each do |presstype| %>
          <p class="tag"><%=presstype%></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
