<div class="writer-card card">
  <div class="writer-card-top hidden">
    <div class="left-gutter">
      <div class="card-checkbox">
        <input type="checkbox" class="campaign-selector" data-id="<%=job.id%>" value="<%=job.id%>"/>
      </div>
    </div>
      <div class="writer-name-col">
      <% if current_user.admin %>
      <p class="name"><a href="/writers/<%=job.writer.id%>/edit"><%=job.writer.f_name%> <%=job.writer.l_name%></a></p>
      <% else %>
      <p class="name"><%=job.writer.f_name%> <%=job.writer.l_name%></p>
      <% end %>
      <p class="position"><%=job.position%></p>
    </div>
    <div class="writer-first-email-col">
    <% if job.email_work %>
      <p><a href="mailto:<%=job.email_work%>"><%=job.email_work.downcase%></a></p>
    <% end %>
    </div>
    <div class="writer-second-email-col">
      <% if job.writer.email_personal %>
        <p><a href="mailto:<%=job.writer.email_personal%>"><%=job.writer.email_personal.downcase%></a></p>
      <% end %>
      <% if job.key_contact == true %>
      <div class="key-contact-star pull-xs-right">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" width="40px" viewBox="0 0 91 113.75" enable-background="new 0 0 91 91" xml:space="preserve"><g><path fill="#2A97DA" d="M70.583,40.142c-0.225-0.705-0.881-1.184-1.619-1.184H52.966l-5.527-16.83   c-0.23-0.697-0.881-1.168-1.615-1.168s-1.387,0.471-1.615,1.168l-5.529,16.83H22.681c-0.74,0-1.395,0.479-1.619,1.184   s0.031,1.473,0.633,1.902l12.943,9.213l-5.213,15.867c-0.23,0.699,0.016,1.465,0.607,1.902c0.299,0.219,0.652,0.33,1.008,0.33   c0.346,0,0.689-0.105,0.986-0.316l13.797-9.822l13.795,9.822c0.6,0.43,1.402,0.418,1.994-0.014   c0.592-0.438,0.836-1.203,0.607-1.902l-5.213-15.867l12.943-9.213C70.552,41.614,70.808,40.847,70.583,40.142z"/></g></svg>
      </div>
      <% end %>
    </div>
    <div style="clear: both;"></div>
  </div>
  <div class="writer-card-bottom hidden">
    <div class="left-gutter">
      <div class="response <%="invisible" unless(params[:controller] == "campaigns")%>">
        <div class="thumbs-up <%="selected" if(@thumb == "positive")%>">
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" width="30" viewBox="0 0 100 125" style="enable-background:new 0 0 100 100;" xml:space="preserve"><path d="M72.1,38.1H61.9l2.8-12.2c0.7-3.8-2.2-7.3-6.1-7.3c-2.2,0-4.3,1.2-5.4,3.1L42.9,41.6c-1.1,2.1-3.3,3.4-5.7,3.4h-4H21.6  c-1.2,0-2.2,1-2.2,2.2v25c0,1.2,1,2.2,2.2,2.2h11.7v0h4.6c1.9,0,3.8,0.8,5.1,2.3c2.4,2.8,5.9,4.6,9.8,4.6h15.1  c7,0,12.8-5.8,12.8-12.8v-0.5V51.4v-4.8C80.6,41.9,76.8,38.1,72.1,38.1z M78.4,51.4v16.7v0.5c0,5.8-4.7,10.6-10.6,10.6H52.7  c-3.1,0-6.1-1.4-8.1-3.8c-1.6-2-4.1-3.1-6.8-3.1h-2.3v-25h1.7c3.2,0,6.1-1.8,7.6-4.6l10.4-19.8c0.7-1.2,2-2,3.4-2  c1.2,0,2.3,0.5,3,1.4c0.7,0.9,1.1,2.1,0.9,3.2l-2.7,12.1l-0.6,2.7h2.8h10.1c3.5,0,6.3,2.8,6.3,6.3V51.4z"/></svg>
        </div>
        <div class="thumbs-down <%="selected" if(@thumb == "negative")%>">
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" width="30" viewBox="0 0 100 125" style="enable-background:new 0 0 100 100;" xml:space="preserve"><path d="M67.8,18.6H52.7c-3.9,0-7.5,1.8-9.8,4.6c-1.2,1.5-3.1,2.3-5.1,2.3l-4.6,0l0,0H21.6c-1.2,0-2.2,1-2.2,2.2v25  c0,1.2,1,2.2,2.2,2.2h11.7l0,0h4c2.4,0,4.6,1.3,5.7,3.4l10.4,19.9c1.1,1.9,3.1,3.1,5.4,3.1c3.9,0,6.8-3.5,6.1-7.3l-2.8-12.2h10.1  c4.7,0,8.5-3.8,8.5-8.5v-4.8V31.9v-0.5C80.6,24.3,74.8,18.6,67.8,18.6z M78.4,31.9v16.7v4.8c0,3.5-2.8,6.3-6.3,6.3H61.9h-2.8  l0.6,2.7l2.7,12.1c0.2,1.1-0.1,2.3-0.9,3.2c-0.8,0.9-1.9,1.4-3,1.4c-1.4,0-2.7-0.8-3.4-2L44.9,57.4c-1.5-2.9-4.4-4.6-7.6-4.6h-1.7  v-25l2.3,0c2.7,0,5.1-1.1,6.8-3.1c2-2.4,5-3.8,8.1-3.8h15.1c5.8,0,10.6,4.7,10.6,10.6V31.9z"/></svg>
        </div>
      </div>
      <div class="flag-contact" data-id="<%=job.writer.id%>"  data-toggle="modal" data-target="#flagModal"  <%="invisible" unless(params[:controller] == "campaigns")%>">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" width="20" viewBox="0 0 100 125" style="enable-background:new 0 0 100 100;" xml:space="preserve"><g><path d="M85.1,10.4c-0.4-0.6-1-1-1.7-1h-57c-1.1,0-2,0.9-2,2v34.3c0,1.1,0.9,2,2,2h57c0.7,0,1.4-0.4,1.7-1s0.4-1.4,0-2l-9.4-16.1   l9.4-16.1C85.4,11.8,85.4,11,85.1,10.4z"/><path d="M17.3,11.1v77.5c0,1.1,0.9,2,2,2s2-0.9,2-2V11.1c0-1.1-0.9-2-2-2S17.3,10,17.3,11.1z"/></g></svg>
      </div>
    </div>
    <div class="contact-info">
      <div class="row1">
        <div class="heading-col">
          <p class="card-heading">location</p>
        </div>
        <% location_arr = job.writer.city, job.writer.state, job.writer.country.name %>
        <% location_arr.delete(nil) %>
        <% if location_arr.count === 3 %>
          <p><%=job.writer.city%>, <%=job.writer.state%>, <%=job.writer.country.name%></p>
        <% elsif location_arr.count === 2 %>
          <p><%=job.writer.city%><%=job.writer.state%>, <%=job.writer.country.name%></p>
        <% elsif location_arr.count === 1 %>
          <p><%=job.writer.country.name%></p>
        <% end %>
      </div>
      <div class="row2">
          <p class="card-heading" style="font-size: 1em; margin-top: 5px;">writes for</p>
      </div>
      <%job.writer.jobs.each do |job|%>
        <%if job.outlet_profile%>
        <p><a target="_blank" href="http://<%=job.outlet_profile%>"><%=job.outlet.name%>, </a></p>
        <%else%>
        <p><%=job.outlet.name%>, </p>
        <%end%>
      <% end %>

    </div>
    <div class="social-info">
      <%if job.writer.twitter.present? %>
        <div class="twitter-link social-wrapper">
          <div class="social-icon">
            <?xml version="1.0" encoding="UTF-8" standalone="no"?>
            <svg width="18px" viewBox="0 0 38 33" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <path d="M36.4,1.3 C34.9,2.2 33.3,2.9 31.5,3.2 C30.1,1.7 28.1,0.7 25.9,0.7 C21.7,0.7 18.2,4.2 18.2,8.6 C18.2,9.2 18.3,9.8 18.4,10.4 C12,10.1 6.4,6.9 2.6,2.2 C1.9,3.4 1.6,4.7 1.6,6.2 C1.6,8.9 3,11.3 5,12.8 C3.7,12.8 2.6,12.4 1.5,11.8 L1.5,11.9 C1.5,15.7 4.1,18.9 7.7,19.6 C7.1,19.8 6.4,19.9 5.7,19.9 C5.2,19.9 4.7,19.9 4.3,19.8 C5.3,22.9 8.1,25.2 11.5,25.3 C8.9,27.4 5.6,28.7 2,28.7 C1.4,28.7 0.8,28.7 0.2,28.6 C3.6,30.8 7.6,32.1 12,32.1 C26.1,32.1 33.9,20.1 33.9,9.7 L33.9,8.7 C35.4,7.6 36.7,6.2 37.7,4.6 C36.3,5.2 34.8,5.7 33.3,5.8 C34.6,4.7 35.8,3.2 36.4,1.3 L36.4,1.3 Z" id="Twitter" fill="#555D64"></path>
                </g>
            </svg>
          </div>
          <p class="social-link"><a target="_blank" href="http://twitter.com/<%=job.writer.twitter%>"><%=job.writer.twitter_followers%><%="twitter" if !job.writer.twitter_followers.present?%></a></p>
        </div>
      <% end %>
      <%if job.writer.linkedin.present? %>
        <div class="linkedin-link social-wrapper">
          <div class="social-icon">
            <?xml version="1.0" encoding="UTF-8" standalone="no"?>
            <svg width="16px" viewBox="0 0 38 34" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <g id="LinkedIn" fill="#555D64">
                        <rect id="Rectangle-path" x="1.3" y="10.8" width="7.2" height="22.8"></rect>
                        <path d="M28.1,10.6 C24,10.6 21.4,12.8 20.9,14.4 L20.9,10.8 L12.8,10.8 C12.9,12.7 12.8,33.6 12.8,33.6 L20.9,33.6 L20.9,21.3 C20.9,20.6 20.9,19.9 21.1,19.4 C21.7,18 22.8,16.6 25,16.6 C27.8,16.6 29.1,18.7 29.1,21.8 L29.1,33.6 L37.3,33.6 L37.3,20.9 C37.2,13.9 33.2,10.6 28.1,10.6 L28.1,10.6 Z" id="Shape"></path>
                        <path d="M4.7,0.1 C2,0.1 0.3,1.8 0.3,4.1 C0.3,6.3 2,8 4.6,8 L4.7,8 C7.4,8 9.1,6.3 9.1,4 C9,1.8 7.4,0.1 4.7,0.1 L4.7,0.1 Z" id="Shape"></path>
                    </g>
                </g>
            </svg>
          </div>
          <p class="social-link"><a target="_blank" href="http://linkedin.com/in/<%=job.writer.linkedin%>">linkedin</a></p>
        </div>
      <% end %>

    </div>
    <div class="genres">
      <% job.writer.genres.order(:name).limit(10).distinct.each do |genre| %>
        <p class="tag"><%=genre.name%></p>
      <% end %>
    </div>
    <div class="presstypes">
      <% job.presstypes.order(:name).limit(10).distinct.each do |presstype| %>
        <p class="tag"><%=presstype.name%></p>
      <% end %>
    </div>
  </div>
</div>
