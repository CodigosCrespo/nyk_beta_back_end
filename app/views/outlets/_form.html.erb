<div class="form">

<%= form_for(outlet) do |f| %>

  <% if outlet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(outlet.errors.count, "error") %> prohibited this outlet from being saved:</h2>

      <ul>
      <% outlet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
    <br>
    <%= f.label(:website) %>
    <%= f.text_field(:website) %>
    <br>
    <%= f.label(:email) %>
    <%= f.text_field(:email) %>
    <br>
    <%= f.label(:staff_list) %>
    <%= f.text_field(:staff_list) %>
    <br>
    <%= f.label(:description) %>
    <%= f.text_area(:description) %>
    <br>
  </div>
  <div class="form-group">
    <%= f.label(:city) %>
    <%= f.text_field(:city) %>
    <br>
    <%= f.label(:state) %>
    <%= f.text_field(:state) %>
    <br>
    <%= f.label(:country_id) %>
    <%= f.collection_select(:country_id, Country.all, :id, :name, :include_blank => true) %>
    <br>
  </div>
  <div class="form-group">
    <%= f.label(:twitter) %>
    <%= f.text_field(:twitter) %>
    <br>
    <%= f.label(:facebook) %>
    <%= f.text_field(:facebook) %>
    <br>
    <%= f.label(:instagram) %>
    <%= f.text_field(:instagram) %>
    <br>
    <%= f.label(:linkedin) %>
    <%= f.text_field(:linkedin) %>
    <br>
  </div>
  <div class="form-group">
    <%= f.label(:hype_m) %>
    <%= f.check_box(:hype_m) %>
    <br>
    <%= f.label(:submithub) %>
    <%= f.check_box(:submithub) %>
    <br>
  </div>
  <div class="form-group">
    <%= f.label(:notes) %>
    <%= f.text_area(:notes) %>
    <br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
