  <%= f.text_field(:email) %>
  <%= f.label(:city) %>
  <%= f.text_field(:city) %>
  <%= f.label(:state) %>
  <%= f.text_field(:state) %>
  <%= f.label(:country_id) %>
  <%= f.collection_select(:country_id, Country.all, :id, :name) %>
  <%= f.label(:twitter) %>
  <%= f.text_field(:twitter) %>
  <%= f.label(:facebook) %>
  <%= f.text_field(:facebook) %>
  <%= f.label(:instagram) %>
  <%= f.text_field(:instagram) %>
  <%= f.label(:linkedin) %>
  <%= f.text_field(:linkedin) %>
  <%= f.label(:hype_m) %>
  <%= f.check_box(:hype_m) %>
  <%= f.label(:submithub) %>
  <%= f.check_box(:submithub) %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
